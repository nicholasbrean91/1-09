//Created to make a 2d array of students assignments and marks

import java.util.Arrays;
import java.util.Random;

public class StudentAssignments {
	public static void main(String args[]) {

		Random random = new Random();
		
		final int minVal = 0;
		final int maxVal = 100;
		int randNum;
		int total;
		int average;

		total = 0;
		
		int[][] students = new int[4][6]; //Making the field 4x6

	    for (int i = 0; i < 4; i++) {
	        for (int j = 0; j < 6; j++) { 
	        	students[i][j] = minVal + random.nextInt(maxVal- minVal+ 1);
	        	total ++;
	        }
	    }
	  	
	for(int row = 0; row < students.length; row++) {
		for (int column = 0; column < students[row].length; column++) {
			System.out.print(students[row][column] + "\t" );
		}
		System.out.println();
	}
	
	System.out.println();
	average = AvgCal(students);
    System.out.println("he Students Average is: " + average);
}
	
    public static int AvgCal(int[][] array) {
    	int average = 0;
    	int total = 0;
    	int sum = 0;
    	
    	 for (int i = 0; i < 4; i++) {
 	        for (int j = 0; j < 6; j++) { 
 	        	sum += array[i][j];
 	        	total ++;
 	        }
 	    }
    	average = sum/total;
    	return average;
    }
}
