//Created to make a 2d array of students assignments and marks

import java.util.Arrays;
import java.util.Random;

public class StudentAssignments {
	public static void main(String args[]) {
		
		int randNum;
		
		randNum = numGen();
		
		int firstarray[][]= {{randNum,randNum,randNum,randNum},{4,5,6,7}};
		
		System.out.println("Assignments");
		display(firstarray);
		
	}

	public static int numGen() {	
		int randNum = (int) ((Math.random() * ((100 - 1) + 1)) + 1);
		return randNum;
	}


	public static void display(int x[][]) {
		for(int row = 0; row < x.length; row++) {
			for (int column = 0; column < x[row].length; column++) {
				System.out.print(x[row][column] + "\t" );
			}
			System.out.println();
		}
	}
	
}
